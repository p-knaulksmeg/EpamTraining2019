<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/studentAvatarImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_face"/>

    <TextView
        android:id="@+id/studentNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentAvatarImageView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/studentAvatarImageView"
        android:maxLines="1"
        android:textSize="20sp"
        android:typeface="monospace"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        tools:text="Name" />

    <TextView
        android:id="@+id/homeworkCountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/studentAvatarImageView"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/studentAvatarImageView"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="8" />

</merge>